    private void BombCollideWithWall(int i, Walls wall, BombInfo[] bombs)
    {
        switch (wall)
        {
            case Walls.bottom:
                bombs[i].direction.x = Mathf.Abs(bombs[i].direction.x);
                break;
            case Walls.top:
                bombs[i].direction.x = -Mathf.Abs(bombs[i].direction.x);
                break;
            case Walls.right:
                bombs[i].direction.z = -Mathf.Abs(bombs[i].direction.z);
                break;
            case Walls.left:
                bombs[i].direction.z = Mathf.Abs(bombs[i].direction.z);
                break;
        }
    }
